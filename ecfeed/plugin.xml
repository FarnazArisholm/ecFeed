<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="ecFeed"
            id="com.testify.ecfeed">
      </category>
      <wizard
            name="New Equivalence Class Tree file"
            icon="icons/sample.gif"
            category="com.testify.ecfeed"
            class="com.testify.ecfeed.wizards.NewEcFileWizard"
            id="com.testify.ecfeed.wizards.NewEcFileWizard">
      </wizard>
   </extension>
   
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.testify.ecfeed.editor.EcEditor"
            default="true"
            extensions="ect"
            icon="icons/sample.gif"
            id="com.testify.ecfeed.editors.eceditor"
            name="Equivalence Class Editor">
      </editor>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="ecFeed commands"
            id="com.testify.ecfeed.commands.ecFeedCommands">
      </category>
      <command
            name="addClass"
            categoryId="com.testify.ecfeed.commands.ecFeedCommands"
            id="com.testify.ecfeed.commands.addClass">
      </command>
      <command
            categoryId="com.testify.ecfeed.commands.ecFeedCommands"
            id="com.testify.ecfeed.model.commands.editPartition"
            name="editPartition">
      </command>
      <command
            categoryId="com.testify.ecfeed.commands.ecFeedCommands"
            id="com.testify.ecfeed.model.commands.addPartition"
            name="addPartition">
      </command>
      <command
            categoryId="com.testify.ecfeed.commands.ecFeedCommands"
            id="com.testify.ecfeed.model.commands.remove"
            name="remove">
      </command>
      <command
            categoryId="com.testify.ecfeed.commands.ecFeedCommands"
            id="com.testify.ecfeed.model.commands.addTestCase"
            name="addTestCase">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.testify.ecfeed.commands.addClass"
            class="com.testify.ecfeed.handlers.AddClassHandler">
      </handler>
      <handler
            class="com.testify.ecfeed.handlers.EditPartitionHandler"
            commandId="com.testify.ecfeed.model.commands.editPartition">
         <enabledWhen>
            <iterate
                  operator="and">
               <instanceof
                     value="com.testify.ecfeed.model.PartitionNode">
               </instanceof>
            </iterate>
         </enabledWhen>
      </handler>
      <handler
            class="com.testify.ecfeed.handlers.AddPartitionHandler"
            commandId="com.testify.ecfeed.model.commands.addPartition">
         <activeWhen>
            <iterate
                  operator="and">
               <instanceof
                     value="com.testify.ecfeed.model.CategoryNode">
               </instanceof>
            </iterate>
         </activeWhen>
      </handler>
      <handler
            class="com.testify.ecfeed.handlers.RemoveNodeHandler"
            commandId="com.testify.ecfeed.model.commands.remove">
      </handler>
      <handler
            class="com.testify.ecfeed.handlers.AddTestCaseHandler"
            commandId="com.testify.ecfeed.model.commands.addTestCase">
         <activeWhen>
            <iterate
                  operator="and">
               <instanceof
                     value="com.testify.ecfeed.model.MethodNode">
               </instanceof>
            </iterate></activeWhen>
      </handler>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
	<menuContribution
	        locationURI="popup:org.eclipse.ui.popup.any">
	     <command
	           commandId="com.testify.ecfeed.commands.addClass"
	           id="com.testify.ecfeed.menus.ecpopup"
	           label="Add to Equivalence Class model"
	           style="push">
	        <visibleWhen
	              checkEnabled="false">
	           <iterate
	                 ifEmpty="false"
	                 operator="and">
                   <instanceof
                         value="org.eclipse.jdt.core.IType">
                   </instanceof>
	           </iterate>
	        </visibleWhen>
	     </command>
	  </menuContribution>
      <menuContribution
            locationURI="popup:com.testify.ecfeed.outline.menu.context">
         <command
               commandId="com.testify.ecfeed.model.commands.editPartition"
               id="com.testify.ecfeed.outline.menu.context.edit"
               label="edit..."
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     operator="and">
                  <instanceof
                        value="com.testify.ecfeed.model.PartitionNode">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="com.testify.ecfeed.model.commands.addPartition"
               id="com.testify.ecfeed.outline.menu.context.addPartition"
               label="add partition..."
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     operator="and">
                  <instanceof
                        value="com.testify.ecfeed.model.CategoryNode">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="com.testify.ecfeed.model.commands.remove"
               id="com.testify.ecfeed.outline.menu.context.remove"
               label="remove"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <or>
                  <iterate>
                     <instanceof
                           value="com.testify.ecfeed.model.ClassNode">
                     </instanceof></iterate>
                  <iterate>
                     <instanceof
                           value="com.testify.ecfeed.model.PartitionNode">
                     </instanceof>
                  </iterate>
               </or>
            </visibleWhen>
         </command>
         <command
               commandId="com.testify.ecfeed.model.commands.addTestCase"
               id="com.testify.ecfeed.outline.menu.context.addTestCase"
               label="add test case..."
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     operator="and">
                  <instanceof
                        value="com.testify.ecfeed.model.MethodNode">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
  </extension> 

</plugin>
